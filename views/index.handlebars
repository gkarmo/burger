<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    <li>
	 <p><span class="label">Burger Name:</span> {{this.burger_name}}</p>

      <button data-id="{{this.id}}" class="delquote">Devoured</button>
  	</li>
  {{/each}}
</ul>

<h3>New Burger</h3> 
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="ca">Burger</label> --}}
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
